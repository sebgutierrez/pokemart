// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  id               Int    @id @default(autoincrement())
  name             String @unique
  category         String
  description      String 
  buyPrice         Int
  sellPrice        Int
  debutGeneration  Int
  pathToImage      String @unique
  itemBags         ItemBag[] 
}

model Trainer {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  region      String?
  pokeDollars Int
  creadtedAt  DateTime @default(now())
  itemBag     ItemBag?
}

model ItemBag {
  id        Int     @id @default(autoincrement())
  quantity  Int
  items     Item[]
  trainer   Trainer @relation(fields: [trainerId], references: [id])
  trainerId Int     @unique
}
